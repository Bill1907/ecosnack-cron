generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id              Int       @id @default(autoincrement())

  // 기본 정보
  title           String    @db.Text
  link            String    @unique @db.Text
  description     String?   @db.Text
  pubDate         DateTime? @map("pub_date") @db.Timestamptz
  source          String?   @db.VarChar(100)
  region          String?   @db.VarChar(10)
  imageUrl        String?   @map("image_url") @db.Text

  // AI 분석 결과
  headlineSummary String?   @map("headline_summary") @db.Text
  soWhat          Json?     @map("so_what") @db.JsonB
  impactAnalysis  Json?     @map("impact_analysis") @db.JsonB
  relatedContext  Json?     @map("related_context") @db.JsonB

  // 메타데이터
  keywords        String[]  @default([])
  category        String?   @db.VarChar(50)
  sentiment       Json?     @db.JsonB
  importanceScore Int?      @map("importance_score")

  // 피드백 시스템 (Few-shot 학습용)
  qualityRating   Int?      @map("quality_rating")  // 1-5 품질 평가
  isExemplar      Boolean   @default(false) @map("is_exemplar")  // 좋은 예시로 마킹
  feedbackNotes   String?   @map("feedback_notes") @db.Text
  reviewedAt      DateTime? @map("reviewed_at") @db.Timestamptz

  // 시스템
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz

  @@index([isExemplar])
  @@index([category])
  @@index([qualityRating])
  @@index([pubDate(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([source])
  @@index([region])
  @@map("articles")
}
